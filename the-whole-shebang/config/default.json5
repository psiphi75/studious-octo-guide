{
    /*
     * Define where the remote proxy will be.
     */
    "web-remote-control": {
        "url": "localhost",   // The actual URL of the proxy
        "channel": "23",      // The channel we operate on
        "update-rate": 500    // How often we send a status update over the network (milliseconds)
    },

    /*
     * Define our location - required for figuring out true north.
     */
    "location": {
        "latitude": null,
        "longitude": null
    },

    /*
     * Which pins the servos are linked to.
     */
    "servos": {
        "1": "P9_16",
        "2": "P8_19"
    },

    /*
     * Modem details
     */
    "modem": {
         "serialport": "/dev/ttyO2"
    },

    "sensors": {
        "gps": {
            "serialport": "/dev/ttyO1",
            "baudrate": 115200
        },

        /*
        * How often we check the sensor samples (milliseconds).
        */
        "sample-rate": 20,
    }
}
